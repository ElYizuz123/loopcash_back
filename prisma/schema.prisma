generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movement{
  idGanancia Int @id @default(autoincrement())
  type String 
  quantity Float 
  isGoal Boolean @default(false)
  
}

model Profile{
  idProfile Int @id @default(autoincrement())
  user String @unique
  name String
  password String
  total Float
}

model Repeatable {
  idRepeatable Int @id @default(autoincrement())
  type String
  everyDate DateTime @db.Date
}

model LoseType {
  idLoseType Int @id @default(autoincrement())
  name String 
}